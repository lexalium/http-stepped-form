{
    "name": "lexal/http-stepped-form",
    "description": "HTTP based Stepped Form.",
    "license": "MIT",
    "authors": [
        {
            "name": "Alex Lex",
            "email": "allapkov@gmail.com"
        }
    ],
    "keywords": [
        "stepped-form",
        "multi-step form",
        "http",
        "http multi-step form"
    ],
    "require": {
        "php": ">=8.1",
        "lexal/stepped-form": "^3.0",
        "symfony/http-foundation": "^5.4 || ^6.4 || ^7.0"
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "infection/infection": "^0.27.9",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.5",
        "roave/security-advisories": "dev-latest",
        "webimpress/coding-standard": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "Lexal\\HttpSteppedForm\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Lexal\\HttpSteppedForm\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "infection/extension-installer": true
        }
    },
    "scripts": {
        "phpunit": "XDEBUG_MODE=coverage phpunit --coverage-text",
        "phpstan": "phpstan",
        "phpcs": "phpcs",
        "infection": "infection -j4 --only-covered --show-mutations",
        "tests": [
            "@phpcs",
            "@phpstan",
            "@phpunit",
            "@infection"
        ]
    }
}
